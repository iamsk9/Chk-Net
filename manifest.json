{
  "manifest_version": 2,

  "name": "Check Internet",
  "description": "This extension checks your Internet Connection every 1 second",
  "version": "1.0",
  "browser_action": {
    "badge": "down from browser_action",
    "default_icon": "offline-icon.png",
    "default_title": "Internet is down"
  },
  "permissions": [
    "http://www.google.com/"
  ],
  "background":{
  "scripts":["vendor/jquery-1.11.1.min.js", "background.js"]
  },
  "icons": {
    "16": "online-icon.png",
    "48": "online-icon.png",
    "128": "online-icon.png"
  }
}